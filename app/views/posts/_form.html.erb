<%= form_for @post, html: { :multipart => true } do |f| %>
    <%= f.label :title %><br>
    <%= f.text_field :title %><br>
    <%= f.label :content %><br>
    <%= f.text_area :content %><br>
    
    <%= f.label :files %><br>
    <%= f.file_field :file, :multiple => true, name: "attachments[file][]" %>
    
    <%= f.submit %>
<% end %>
